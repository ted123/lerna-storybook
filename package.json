{
  "name": "monorepo-test-example",
  "author": "ted123",
  "description": "an example Monorepo React Typescript component library",
  "private": false,
  "scripts": {
    "lint": "run-p -c lint:*",
    "lint:ts": "tslint 'packages/**/*.ts{,x}' --exclude 'packages/**/lib/**/*.d.ts'",
    "lint:css": "stylelint 'packages/**/src/*.ts{,x}'",
    "prettier": "yarn lint:ts --fix",
    "test": "jest",
    "tsc": "lerna run tsc",
    "bootstrap": "lerna bootstrap",
    "legacy": "lerna run legacy",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "build:storybook": "build-storybook",
    "clean": "run-p clean:storybook clean:legacy clean:tsc",
    "clean:storybook": "rimraf storybook-static",
    "clean:legacy": "rimraf packages/*/legacy/dist/*",
    "clean:tsc": "rimraf packages/*/lib/*"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@storybook/react": "^6.4.19",
    "@types/enzyme": "^3.10.11",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@types/storybook__react": "^5.2.1",
    "@types/styled-components": "5.1.24",
    "babel-loader": "^8.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.7",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.6.2",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@storybook/addon-docs": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/theming": "^6.4.19",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "storybook-addon-react-runner": "^0.2.3",
    "styled-components": "^5.3.3"
  }
}
